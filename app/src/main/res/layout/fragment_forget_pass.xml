<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context="com.internshala.foodie.activity.ForgotPassActivity">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="500dp"
        android:layout_below="@id/btnnext"
        android:layout_toEndOf="@id/thinkingperson"
        android:paddingBottom="40dp"
        android:src="@drawable/forgotpassbg2" />

    <ImageView
        android:id="@+id/thinkingperson"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/btnnext"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="200dp"
        android:src="@drawable/forgot2" />

    <TextView
        android:id="@+id/txtlogin"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/kaushan"


        android:paddingLeft="50dp"
        android:text="ForgotPassword"
        android:textColor="#fff"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/txtmsg"
        android:layout_width="300sp"
        android:layout_height="50dp"
        android:layout_below="@id/txtlogin"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50sp"


        android:layout_marginTop="15sp"
        android:fontFamily="@font/exobold"
        android:text="Enter your registered mobile number and Email address below"
        android:textColor="#fff"
        android:textSize="16sp"


        />

    <RelativeLayout

        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_below="@id/txtmsg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:alpha="0.2"
        android:background="@drawable/buttonrad"
        android:backgroundTint="#525252">

    </RelativeLayout>

    <EditText
        android:id="@+id/edtxtmob"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtlogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="128dp"
        android:drawableRight="@drawable/ic_mobile_no"
        android:hint=" Mobile Number"
        android:inputType="number"
        android:maxLength="10"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:textSize="20sp"

        />


    <EditText
        android:id="@+id/edtxtemail"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtxtmob"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:drawableRight="@drawable/ic_email"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:textSize="20sp"

        />

    <Button
        android:id="@+id/btnnext"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/edtxtemail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/buttonrad"
        android:backgroundTint="#bd1816"
        android:fontFamily="@font/exobold"
        android:text="Next"

        android:textColor="#fff"
        android:textSize="20dp"


        />

</RelativeLayout>
