<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.internshala.foodie.activity.OrderCompletionActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/pacifico"
        android:paddingTop="50dp"
        android:text="Success!"
        android:textAlignment="center"
        android:textColor="#21A118"
        android:textSize="80sp" />


    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/orderplacedimg"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_centerInParent="true"
        android:src="@drawable/orderplacedgif"

        />

    <Button
        android:id="@+id/orderplacedbtn"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_below="@id/orderplacedimg"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttonrad"
        android:backgroundTint="#3CBD25"
        android:text="Ok"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="25sp"

        />

</RelativeLayout>