<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/berries2"
    tools:context="com.internshala.foodie.activity.UserCredentialsActivity">

    <TextView
        android:id="@+id/txtlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/pacifico"
        android:text="Foodie"
        android:textColor="#fff"
        android:textSize="80sp" />

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_below="@id/txtlogin"
        android:layout_centerHorizontal="true"
        android:alpha="0.2"
        android:background="@drawable/buttonrad"
        android:backgroundTint="#525252"


        />

    <EditText
        android:id="@+id/edtxtuser"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtlogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:drawableRight="@drawable/ic_mobile_no"
        android:hint=" Mobile Number"
        android:inputType="number"
        android:maxLength="10"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:textSize="20sp"

        />

    <EditText
        android:id="@+id/edtxtpass"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtxtuser"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:drawableRight="@drawable/ic_password"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:textSize="20sp"

        />

    <RelativeLayout
        android:id="@+id/loadingrell"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/edtxtpass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/buttonrad"
        android:backgroundTint="#FF8C00"
        android:visibility="visible">

        <ProgressBar
            android:id="@+id/loginprogbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="5dp"

            />

    </RelativeLayout>

    <Button
        android:id="@+id/btnlogin"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/edtxtpass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/buttonrad"
        android:backgroundTint="#FF8C00"
        android:fontFamily="@font/exobold"
        android:text="Login"
        android:textColor="#fff"
        android:textSize="20dp"
        android:visibility="visible"


        />

    <TextView
        android:id="@+id/txtforgotpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnlogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/oswaldbold"
        android:text="@string/Forgot_Password"
        android:textColor="#fff"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txtnewuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="12dp"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/oswaldbold"
        android:text="@string/New_user"
        android:textColor="#fff"
        android:textSize="15sp" />
</RelativeLayout>
